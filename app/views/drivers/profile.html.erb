<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <table class="table">
      <tr>
        <td>Name</td>
        <td><%= @driver.name %></td>
      </tr>

      <tr>
        <td>Email</td>
        <td><%= @driver.email %></td>
      </tr>

      <tr>
        <td>Phone</td>
