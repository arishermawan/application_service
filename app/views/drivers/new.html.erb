<% type = request.fullpath.split('/').reject { |e| e.empty? }.first%>
<% url_form = type == 'driver' ? driver_signup_path : customer_signup_path %>

<% provide(:button_text, 'Create my Go-jek account') %>
<h1>Sign Up</h1>
<p style="text-align: center">Please Sign up! Thank you..</p>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= render 'form' %>
    <p style="text-align: center">Customer's Registration? <%= link_to "Customers's Signup!", customer_signup_path %></p>
    <p style="text-align: center">Have Account? <%= link_to "Sign in!", driver_login_path %></p>
  </div>
</div>
