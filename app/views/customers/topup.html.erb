
<% provide(:button_text, 'Topup') %>
<h1>GOPAY TOPUP</h1>
<p style="text-align: center
">Please input amount of topup</p>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
  <%= form_for(@customer, url:commit_topup_path) do |f| %>
  <%= render 'error_messages' %>

  <%= f.label :gopay %>
  <%= f.text_field :gopay, value: nil, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
  </div>
</div>
