<h1 style="text-align: center;">Your Profile</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <table class="table">
      <tr>
        <td>Name</td>
        <td><%= @customer.name %></td>
      </tr>

      <tr>
        <td>Email</td>
        <td><%= @customer.email %></td>
      </tr>

      <tr>
        <td>Phone</td>
        <td><%= @customer.phone %></td>
      </tr>
    </table>
    <br>
    <br>
    <br>
    <%= link_to 'Edit Profile', edit_customer_path(@customer), :class => "btn btn-success btn-block", :role => "button" %>
    <%= link_to 'Back', root_url, :class => "btn btn-primary btn-block", :role => "button" %>
  </div>
</div>
